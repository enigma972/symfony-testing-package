{% extends 'base.html.twig' %}

{% block title %}Hello FlysystemController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    Flysystem Bundle Test

    <div>
        <h6>All files</h6>
        <ul>
            {% for file in files %}
            {% if file.type == 'file' %}
                <li><a href="{# {{ path('flysystem_download', {path: file.filename}) }} #}">{{ file.filename }}</a></li>
            {% endif %}
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}
